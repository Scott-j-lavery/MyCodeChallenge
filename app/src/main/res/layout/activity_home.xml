<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical" android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ffdfb9ff">

    <Button
        android:id="@+id/photoButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Click to Take a Photo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="222dp"/>

    <Button
        android:id="@+id/directoryButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Click here to browse Directory"
        android:layout_below="@+id/photoButton"
        android:layout_marginTop="61dp"
        android:layout_alignLeft="@+id/photoButton"
        android:layout_alignStart="@+id/photoButton"
        android:layout_alignRight="@+id/photoButton"
        android:layout_alignEnd="@+id/photoButton"/>

</RelativeLayout>